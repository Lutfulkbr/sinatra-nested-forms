<h1>Display your Pirate here</h1>

<div>
 <h3>Pirate Name: <%= @pirate.name %></h3>
 <p>Pirate Weight: <%= @pirate.weight %></p>
 <p>Pirate Height: <%= @pirate.height %></p>
</div>

<h2>Display your first ship here</h2>
<% @ship.each do |ship| %>
<div>
  <h3>Ship_1 Name: <%= ship.name %><h3>
  <p>Ship_1 Type: <%= ship.type %></p>
  <p>Ship_1 Booty: <%= ship.booty %></p>
</div>
<% end %>

<h2>Display your second ship here</h2>
<% @ship.each do |ship| %>
<div>
  <h3>Ship_2 Name: <%= ship.name %><h3>
  <p>Ship_2 Type: <%= ship.type %></p>
  <p>Ship_2 Booty: <%= ship.booty %></p>
</div>
<% end %>
